{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@screens/*": [
                "./src/screens/*"
            ],
            "@navigation/*": [
                "./src/navigation/*"
            ],
            "@services/*": [
                "./src/services/*"
            ],
            "@utils/*": [
                "./src/utils/*"
            ],
            "@store/*": [
                "./src/store/*"
            ],
            "@types": [
                "./src/types/index"
            ],
            "@types/*": [
                "./src/types/*"
            ],
            "@constants": [
                "./src/constants/index"
            ],
            "@constants/*": [
                "./src/constants/*"
            ],
            "@assets/*": [
                "./assets/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}